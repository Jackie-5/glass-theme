#container {
    position: relative;
    min-height: 100%;
    #mobile-nav {
        display: none;
        .overlay {
            height: 110px;
            position: absolute;
            width: 100%;
            background: #4d4d4d;
            &.fixed {
                position: fixed;
                height: 42px;
                z-index: 99;
            }
        }
        #header {
            padding: 10px 0 0 0;
            .profilepic {
                display: block;
                position: relative;
                z-index: 100;
                margin-top 40px
            }
            .header-menu {
                height: auto;
                margin: 10px;
                ul {
                    width 100%
                    text-align: center;
                    cursor: default;
                }
                li {
                    display: inline-block;
                    margin: 3px;
                    min-width 45px
                    a {
                        font-size 14px
                        color #696969
                        background transparent
                    }
                }
            }
        }
    }
    .left-col {
        background: rgba(255, 255, 255, .85);
        width: 210px;
        position: fixed;
        opacity: 1;
        transition: all .2s ease-in;
        height: 100%;

        .overlay {
            width: 100%;
            height: 120px;
            background-color: black;
            position: absolute;
            opacity: 0.7;
        }
        .intrude-less {
            text-align: center;
            margin: 64px auto 0;
        }
        li:hover {
            background: none;
            font-weight: bold;
        }
        .header-nav {
            width: 100%;
            position absolute
            left 0
            top 0
            visibility  hidden
            transition: transform .3s ease-in;
            .icon-rss,.header-friends {
                display block
                height 35px
                line-height 35px
                text-align center
                color rgba(252,100,35,.5)
                border-top 1px solid rgba(255,255,255,.8)
                border-bottom 1px solid rgba(255,255,255,.8)
                transition 300ms
                i {
                    display inline-block
                    width 14px
                    height 14px
                    background url("/img/iconfont-RSS.png") no-repeat
                    opacity .5
                    margin-right 3px
                    transition 300ms
                }
                &:hover{
                    color rgba(252,100,35,1)
                    background rgba(255,255,255,.8)
                    i{
                        opacity 1
                    }
                }
            }
            .header-friends {
                margin-bottom: 5px;
                font-size: 14px;
                color:rgba(153,153,153,0.8);
                i{
                    height 18px
                    width 17px
                    background url("/img/iconfont-friend-link.png") 0 7px no-repeat
                }
                &:hover{
                    color rgba(153,153,153,0.8)
                    background rgba(255,255,255,.8)
                    i{
                        opacity 1
                    }
                }
            }
            .social {
                margin-top 10px
                text-align center
                li {
                    display: inline-block;
                    width: 99px;
                    height 30px
                    border-top 1px solid rgba(255,255,255,.8)
                    border-bottom 1px solid rgba(255,255,255,.8)
                    border-right 1px solid rgba(255,255,255,.8)
                    margin-bottom: 6px;
                    transition 300ms
                    //text-align: center;
                    a {
                        display block
                        font-size 12px
                        line-height: 30px;
                        color: rgba(153,153,153,.8)
                        margin-left 3px
                        i {
                            width 15px
                            height 15px
                            display inline-block
                            vertical-align middle
                            opacity .8
                        }
                        .left {
                            margin-right 3px
                        }
                        .right {
                            margin-left 3px
                        }
                        .sina {
                            background: url('/img/iconfont-xinlangweibo.png') no-repeat
                        }
                        .GitHub {
                            margin-top -3px
                            background: url('/img/iconfont-github.png') no-repeat;
                        }
                        .Email {
                            margin-top 2px
                            background: url('/img/iconfont-youjian.png') no-repeat;
                        }
                        .QQ {
                            margin-top -3px
                            margin-left 2px
                            background: url('/img/iconfont-QQ.png') no-repeat;
                        }

                    }
                    &:hover {
                        //font-size: 15px;
                        opacity: 1;
                        font-weight 100
                        background-color rgba(255,255,255,.8)
                        color #fff
                    }
                    &:nth-child(2n){
                        border-left 1px solid rgba(255,255,255,.8)
                        border-right 0
                        margin-left 5px
                    }

                }
            }
        }
}
