.header-menu {
    line-height: 28px;
    font-family: inherit;
    cursor: pointer;
    /*text-transform: uppercase;*/
    float: none;
    text-align: center;
    display: -webkit-box;
    -webkit-box-orient: horizontal;
    -webkit-box-pack: center;
    -webkit-box-align: center;
    ul {
        width 100%
        li {
            height 40px
            cursor: pointer
            margin-bottom 5px
            .active {
                color rgba(255,255,255,1)
                background-color rgba(153,204,153,.8);
                font-weight 100
            }
            a {
                font-family "Microsoft YaHei", "微软雅黑", "arial", "Helvetica", "Hiragino Sans GB", "宋体", "Tahoma", "STHeiti"
                height 100%
                display block
                font-size: 16px;
                background-color rgba(255,255,255,.3)
                transition 300ms
                color #a7a7a7
                line-height 40px
                font-weight 100
            }
            &:hover,.active {
                text-indent 1em
                a {
                    color rgba(255,255,255,1)
                    background-color rgba(153,204,153,.8);
                    font-weight 100
                    text-indent 1em
                }
            }
        }
    }

