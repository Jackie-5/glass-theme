.friends-link-box
    width 100%
    height 250px
    position fixed
    bottom 0
    left 0
    background rgba(0,0,0,.6)
    z-index 9999
    transition 300ms
    .close
        width 22px
        height 22px
        cursor pointer
        border-radius 100%
        border 1px solid #fff
        display block
        position absolute
        top 15px
        right 20px
        transition 300ms
        &:before
            content ''
            background url('../img/iconfont-guanbi.png') 5px 5px no-repeat;
            display block
            width 100%
            height 100%
        &:hover
            transform:rotate(180deg)
    .friends-tips
        color #fff
        margin-left 20px
        margin-top 20px
        span
            margin-left 10px
            vertical-align bottom
    .friends-link
