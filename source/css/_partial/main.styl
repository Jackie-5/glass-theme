#header {
    width: 100%;
    a {
        color: #696969;
        transition 300ms
        &:hover {
            color: #B0A0AA;
        }
    }
    .profilepic {
        text-align: center;
        display: block;
        border: 5px solid #fff;
        border-radius: 50%;
        width: 90px;
        height: 90px;
        margin: 0 auto;
        position: relative;
        overflow: hidden;
        background: #fff;
        -webkit-transition: all 0.2s ease-out;
        display: -webkit-box;
        -webkit-box-orient: horizontal;
        -webkit-box-pack: center;
        -webkit-box-align: center;
        line-height 108px
        img {
            position absolute
            top 10%
            left 10%
            width: 80%;
            height: 80%;
            border-radius: 50%;
            opacity: 0;
            -webkit-transition: all 0.2s ease-out;
            &.show {
                width: 100%;
                height: 100%;
                opacity: 1;
                top 0
                left 0
            }
        }
        &:hover {
            background: white;
            border: 5px solid #4eb516;
        }
}
